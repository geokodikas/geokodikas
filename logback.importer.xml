<configuration debug="false">

    <appender name="FILE-IMPORTER" class="ch.qos.logback.core.FileAppender">
        <file>logs/importer.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <immediateFlush>true</immediateFlush>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="FILE-IMPORTER" />
    </root>

    <logger name="be.ledfan.geocoder.importer.DetermineLayer" level="ERROR"/>
    <logger name="be.ledfan.geocoder.importer.DetermineLayerNode" level="ERROR"/>
    <logger name="be.ledfan.geocoder.importer.DetermineLayerRelation" level="ERROR"/>
    <logger name="be.ledfan.geocoder.importer.DetermineLayerWay" level="ERROR"/>

</configuration>
